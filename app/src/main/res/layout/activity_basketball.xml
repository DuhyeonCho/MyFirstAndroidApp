<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_basketball"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="24dp"
    tools:context="com.example.myapplication.BasketballActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="24dp"
                android:paddingLeft="32dp"
                android:text="Team A"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/teamA_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="24dp"
                android:paddingLeft="40dp"
                android:text="0"
                android:textSize="50sp" />

            <Button
                android:id="@+id/teamA_3p"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:background="#e26d20"
                android:text="+3 POINTS"
                android:textSize="15sp" />

            <Button
                android:id="@+id/teamA_2p"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="#e26d20"
                android:text="+2 POINTS"
                android:textSize="15sp" />

            <Button
                android:id="@+id/teamA_1p"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="#e26d20"
                android:text="FREE THROW"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="320dp"
            android:background="#605d5d"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="24dp"
                android:paddingLeft="32dp"
                android:text="Team B"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/teamB_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="24dp"
                android:paddingLeft="40dp"
                android:text="0"
                android:textSize="50sp" />

            <Button
                android:id="@+id/teamB_3p"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:background="#e26d20"
                android:text="+3 POINTS"
                android:textSize="15sp" />

            <Button
                android:id="@+id/teamB_2p"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="#e26d20"
                android:text="+2 POINTS"
                android:textSize="15sp" />

            <Button
                android:id="@+id/teamB_1p"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="#e26d20"
                android:text="FREE THROW"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/reset_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#e26d20"
        android:text="RESET"
        android:textSize="16sp" />
</RelativeLayout>